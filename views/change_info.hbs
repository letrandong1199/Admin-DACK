 <div class="content mt-3">
            <div class="animated fadeIn">

                <div class="row">
                
                    <div class="col-xs-6 col-sm-6">
                        <div class="card">
                            <div class="card-header">
                                <strong>Chỉnh sửa</strong> <small> Thông tin khách hàng</small>
                            </div>
                            <div class="card-body card-block">
                                <form action="/change_info={{data.id}}"method="POST">
                                <div class="form-group">
                                    <label class=" form-control-label">Họ</label>
                                    <div class="input-group">
                                        <input class="form-control" name="firstname" value="{{data.Ho}}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Tên</label>
                                    <div class="input-group">
                                        <input class="form-control"name="lastname" value="{{data.Ten}}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Địa chỉ Email</label>
                                    <div class="input-group">
                                        <input class="form-control"name="email" value="{{data.Email}}">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class=" form-control-label">Số điện thoại</label>
                                    <div class="input-group">
                                        <input class="form-control"name="phonenumber" value="{{data.SDT}}">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-2">
                                        <button type="submit">Lưu</button>
                                    </div>
                                    <div class="col-sm-4">
                                        <button><a href="customer"></a>Quay lại</button>
                                    </div>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            </div><!-- .animated -->
        </div><!-- .content -->

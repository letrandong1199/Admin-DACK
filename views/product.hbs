<div class="content mt-3">
  <div class="animated fadeIn">
    <div class="row">

      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <strong class="card-title">Sản phẩm</strong>
          </div>
          <div class="card-body">
            <table id="bootstrap-data-table" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Tên sản phẩm</th>
                  <th>Nhãn hiệu</th>
                  <th>Loại</th>
                  <th>Giới tính</th>
                  <th>Giá</th>
                  <th><button><a href="add_product">Thêm sản phẩm</a></button></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {{#each data}}
                <tr>
                  <td>{{this.id}}</td>
                  <td>{{this.Ten}}</td>
                  <td>{{this.Brand}}</td>
                  <td>{{this.Loai}}</td>
                  <td>{{this.Gioitinh}}</td>
                  <td>{{this.Gia}}</td>
                  <th><button><a href="/edit={{this.id}}">Chỉnh Sửa</a></button></th>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
          <!--Pagination-->
            <nav aria-label="Page navigation example">
                <div class="col-lg-6 col-md-6">
                        <p>Hiển thị kết quả từ {{startIndex}} đến {{endIndex}} trên {{totalItems}}</p>
                </div>
                <div class="col-lg-6 col-md-6">
                <ul class="pagination">
                    {{#pagination pageCount currentPage 6 path}}
                    {{/pagination}}
                </ul>
                </div>
            </nav>
      </div>
    </div>
     <div class="clearfix"></div>
          
  </div>
  <!-- .animated -->
</div><!-- .content -->
